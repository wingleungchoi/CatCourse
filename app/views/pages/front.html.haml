.tube_layout#cat_tubes
  .tube_container
    %span.glyphicon.glyphicon-remove#close_cat_tubes
    %br
    <iframe width="640" height="480" src="//www.youtube-nocookie.com/embed/pld_Nkfoa40?rel=0" frameborder="0" allowfullscreen></iframe>
.modal.fade{id:"myModal"}
  .modal-dialog
    .modal-content
      .modal-body
        %button.close{ :type=>"button", "data-dismiss"=>"modal", "aria-label"=>"Close"}
          %span.glyphicon.glyphicon-remove
          %span{ "aria-hidden"=>"true"}
        <iframe width="320" height="240" src="//www.youtube-nocookie.com/embed/pld_Nkfoa40?rel=0" frameborder="0" allowfullscreen></iframe> 
%section.background_cat#background_cat
  %br
  %br
  %br
  %br
  .row.subheader_container
    %ul.nav.navbar-nav.navbar-right.subheader
      %li.active
        = link_to "#" do
          = t("subheader.curriculum")
          %span.sr-only
      %li
        = link_to t("subheader.info"), "#"
      %li
        =link_to t("subheader.coaching"), "#"
      %li
        =link_to t("subheader.about"), "aboutus"
  .row.welcome
    .col-sm-7.col-sm-offset-3
      %h2= t("welcome.title")
      %h1= t("welcome.school")
      = link_to  "#",{"data-toggle"=>"modal", "data-target"=>"#myModal"} do
        %span.glyphicon.glyphicon-play-circle
      %br
      %br      
  .row.sign_up_form
    .col-sm-7.col-sm-offset-3
      %br 
      %span.glyphicon.glyphicon-envelope
      %h4= t("welcome.sample")
      = form_for @user do |f|
        .col-sm-4
          =f.text_field :name, placeholder: t("welcome.name"), :class => "form-control"
        .col-sm-4
          =f.text_field :email, placeholder: t("welcome.email"), :class => "form-control"
        .col-sm-3
          =f.submit t("welcome.start"), :class => "btn btn-danger"
      %br
      %br
      = link_to t("welcome.paypal"), @user.payurl_url(root_path), class: "btn btn-primary"
      %br
      %br
